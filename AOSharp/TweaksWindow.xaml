<Controls:MetroWindow x:Class="AOSharp.TweaksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Tweaks" 
        Height="250" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ShowMinButton="False"
        ShowMaxRestoreButton="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <Grid Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="AO Install Directory:" Margin="0,0,0,5"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Name="InstallDirectoryTextBox"
                             Grid.Column="0"
                             IsReadOnly="True"
                             Text="{Binding InstallDirectory, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,5,0"/>
                    <Button Name="BrowseDirectoryButton"
                            Grid.Column="1"
                            Width="75"
                            Click="BrowseDirectoryButton_Click">
                        Browse...
                    </Button>
                </Grid>
            </Grid>

            <Button Name="EnableLargeAddressAwareButton"
                    Height="40"
                    Margin="0,15,0,0"
                    Click="EnableLargeAddressAwareButton_Click"
                    IsEnabled="{Binding CanEnableLargeAddressAware}">
                Enable large address aware
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="20,0,20,20">
            <Button Name="CloseButton"
                    Width="75"
                    Click="CloseButton_Click"
                    IsCancel="True">
                Close
            </Button>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>